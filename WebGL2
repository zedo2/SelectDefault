import React, { useRef, useEffect, useState } from 'react';
import * as THREE from 'three';
// Импорт OrbitControls из three/examples
import { OrbitControls } from 'three/examples/jsm/controls/OrbitControls';

function CarWithInteractiveDoor() {
  const mountRef = useRef(null);
  const doorRef = useRef(null);
  const controlsRef = useRef(null);
  const [doorOpen, setDoorOpen] = useState(false);

  useEffect(() => {
    const width = mountRef.current.clientWidth;
    const height = mountRef.current.clientHeight;

    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, width / height, 0.1, 1000);
    camera.position.set(0, 20, 50);
    camera.lookAt(0, 0, 0);

    const renderer = new THREE.WebGLRenderer({ antialias: true });
    renderer.setSize(width, height);
    mountRef.current.appendChild(renderer.domElement);

    // OrbitControls для управления мышкой
    const controls = new OrbitControls(camera, renderer.domElement);
    controlsRef.current = controls;
    controls.enableDamping = true;
    controls.dampingFactor = 0.1;
    controls.minDistance = 20;
    controls.maxDistance = 100;

    const car = new THREE.Group();

    // Колёса
    function createWheel() {
      const geometry = new THREE.CylinderGeometry(4, 4, 2, 32);
      const material = new THREE.MeshStandardMaterial({ color: 0x333333 });
      const wheel = new THREE.Mesh(geometry, material);
      wheel.rotation.z = Math.PI / 2;
      return wheel;
    }

    const backLeftWheel = createWheel();
    backLeftWheel.position.set(-15, 4, 10);
    car.add(backLeftWheel);

    const backRightWheel = createWheel();
    backRightWheel.position.set(-15, 4, -10);
    car.add(backRightWheel);

    const frontLeftWheel = createWheel();
    frontLeftWheel.position.set(15, 4, 10);
    car.add(frontLeftWheel);

    const frontRightWheel = createWheel();
    frontRightWheel.position.set(15, 4, -10);
    car.add(frontRightWheel);

    // Корпус
    const bodyGeometry = new THREE.BoxGeometry(40, 10, 20);
    const bodyMaterial = new THREE.MeshStandardMaterial({ color: 0xff0000 });
    const body = new THREE.Mesh(bodyGeometry, bodyMaterial);
    body.position.y = 9;
    car.add(body);

    // Кабина
    const cabinGeometry = new THREE.BoxGeometry(18, 8, 15);
    const cabinMaterial = new THREE.MeshStandardMaterial({ color: 0x00ff00, opacity: 0.7, transparent: true });
    const cabin = new THREE.Mesh(cabinGeometry, cabinMaterial);
    cabin.position.set(0, 15, 0);
    car.add(cabin);

    // Дверь (с возможностью открыть/закрыть)
    const doorGeometry = new THREE.BoxGeometry(10, 8, 1);
    const doorMaterial = new THREE.MeshStandardMaterial({ color: 0x0000ff });
    const door = new THREE.Mesh(doorGeometry, doorMaterial);
    door.geometry.translate(5, 0, 0); // смещение для шарнира
    door.position.set(-10, 15, 10);
    doorRef.current = door;
    car.add(door);

    scene.add(car);

    // Свет
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
    scene.add(ambientLight);

    const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
    directionalLight.position.set(50, 50, 50);
    scene.add(directionalLight);

    // Анимация с обновлением OrbitControls
    const animate = () => {
      requestAnimationFrame(animate);
      controls.update();
      renderer.render(scene, camera);
    };
    animate();

    return () => {
      mountRef.current.removeChild(renderer.domElement);
      scene.clear();
      renderer.dispose();
      controls.dispose();
    };
  }, []);

  // Реагируем на открытие и закрытие двери
  useEffect(() => {
    if (!doorRef.current) return;
    const door = doorRef.current;
    const openAngle = Math.PI / 2.6;
    // простой моментальный поворот (можно плавно доработать)
    door.rotation.y = doorOpen ? openAngle : 0;
  }, [doorOpen]);

  return (
    <>
      <div ref={mountRef} style={{ width: '600px', height: '400px' }} />
      <button onClick={() => setDoorOpen(!doorOpen)} style={{ marginTop: '10px' }}>
        {doorOpen ? 'Закрыть дверь' : 'Открыть дверь'}
      </button>
    </>
  );
}

export default CarWithInteractiveDoor;
